{
  "name": "fashion-test-playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx http-server ./ -p 4000",
    "test": "npx playwright test",
    "test:test": "cross-env TEST_ENV=test npx playwright test --config=playwright.config.ts",
    "test:stage": "cross-env TEST_ENV=stage npx playwright test --config=playwright.config.ts",
    "test:prod": "cross-env TEST_ENV=prod npx playwright test --config=playwright.config.ts",
    "test:test:headed": "cross-env TEST_ENV=test npx playwright test --config=playwright.config.ts --headed",
    "test:stage:headed": "cross-env TEST_ENV=stage npx playwright test --config=playwright.config.ts --headed",
    "test:prod:headed": "cross-env TEST_ENV=prod npx playwright test --config=playwright.config.ts --headed",
    "test:debug": "npx playwright test --config=playwright.config.ts --debug",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up --abort-on-container-exit",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose up --abort-on-container-exit --exit-code-from playwright-tests",
    "docker:test:rebuild": "docker-compose up --build --abort-on-container-exit --exit-code-from playwright-tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1"
  }
}
